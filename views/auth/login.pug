html
  head
    title Login
    link(rel="stylesheet", 
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css",
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T",
    crossorigin="anonymous")
  body(style="margin-top: 30vh;")
    .container
      h1 Login

      if errors
        each error in errors
          .alert.alert-danger=error

      form(action="/auth/login", method="post")
        .form-group
          label.col-form-label(for="abc") Email
          input#abc.form-control(type="text", name="email", placeholder="Email", value=values ? values.email : "")
        .form-group
          label.col-form-label(for="abc") Password
          input#abc.form-control(type="password", name="password", placeholder="Password")
        button.btn.btn-primary(type="submit") Login
extends ../layout/common

block content
  h1 Create Users

  if errors
    each error in errors
      .alert.alert-danger=error

  form(action="/users/create", method="post")
    .form-group.row
      label.col-sm-2.col-form-label(for="abc") Name
      .col-sm-10
        input#abc.form-control(type="text", name="name", placeholder="Name", value=values ? values.name : "")
    .form-group.row
      label.col-sm-2.col-form-label(for="abc") Phone
      .col-sm-10
        input#abc.form-control(type="text", name="phone", placeholder="Phone", value=values ? values.phone : "")
    button.btn.btn-primary(type="submit") Add user